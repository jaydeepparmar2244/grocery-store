<% layout('layouts/boilerplate')%>
    <h1>All Products</h1> 
    <div class="row">
        <% for(let product of products){ %>
            <div class="card mb-4 mx-3 p-0" style="width: 18rem;">
                <img class="card-img-top" src="<%=product.images[0].url%>" alt="..." style="height: 16rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= product.brand %> <%= product.name %></h5>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item text-muted"><%= product.category%> </li>
                  <li class="list-group-item"><%= product.amount %>- <%= product.price%>â‚¹</li>
                </ul>
                <div class="card-body">
                  <a href="products/<%=product._id%>" class="btn btn-primary">View</a>
                </div>
            </div>
            <% } %>  
    </div>

    